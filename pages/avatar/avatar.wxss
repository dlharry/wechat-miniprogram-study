.container {
    padding: 20rpx;
  }
  
  .avatar-container {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 40rpx 20rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  }
  
  .avatar-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
    text-align: center;
  }
  
  .avatar-wrapper {
    width: 240rpx;
    height: 240rpx;
    margin: 0 auto 40rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 2rpx solid #eee;
    box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .avatar {
    width: 100%;
    height: 100%;
  }
  
  .choose-btn, .upload-btn {
    width: 80%;
    margin: 20rpx auto;
    background-color: #07C160;
    color: white;
    border-radius: 40rpx;
    font-size: 28rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
  }
  
  .upload-btn {
    background-color: #1677ff;
  }
      